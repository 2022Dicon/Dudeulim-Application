<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="@color/blue_700"
                        android:width="0dp"/>
                    <solid android:color="@color/blue_300"/>
                    <padding android:right="8dp"
                        android:bottom="8dp"
                        android:top="8dp"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/triangle_1"
                android:gravity="end|center_vertical"
                android:width="20dp"
                android:height="20dp"
                />

        </layer-list>
    </item>
</selector>